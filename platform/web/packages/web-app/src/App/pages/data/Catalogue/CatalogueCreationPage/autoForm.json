{
  "label": "Création d'une organisation",
  "sections": [
    {
      "id": "section_0",
      "label": "Présentation de l’organisation",
      "description": "Une courte présentation pour situer l’organisation dans son contexte et sa mission.",
      "display": "grid",
      "properties": {
        "icon": "presentation"
      },
      "fields": [
        {
          "name": "title",
          "type": "textField",
          "label": "Nom de l'organisation",
          "required": true,
          "conditions": [
            {
              "type": "display",
              "expression": "#context == 'creation'"
            }
          ],
          "properties": {
            "fullRow": true
          }
        },
        {
          "name": "description",
          "type": "textField",
          "label": "Description courte",
          "properties": {
            "multiline": true,
            "rows": 7
          }
        },
        {
          "name": "img",
          "type": "dropPicture",
          "label": "Illustration (facultatif)"
        }
      ]
    },
    {
      "id": "section_1",
      "label": "Identité de l’organisation",
      "description": "Ces infos permettent d’identifier l’organisation et de la relier à des données externes (INSEE, LinkedIn…).",
      "properties": {
        "icon": "identity"
      },
      "fields": [
        {
          "name": "indicators.siret[0]",
          "type": "textField",
          "label": "SIRET"
        },
        {
          "name": "indicators.website[0]",
          "type": "textField",
          "label": "Site web"
        },
        {
          "name": "indicators.linkedin-url[0]",
          "type": "textField",
          "label": "LinkedIn"
        }
      ]
    },
    {
      "id": "section_2",
      "label": "Activités de l’organisation",
      "description": "Décrivez ce que fait concrètement l’organisation : secteurs, services, expertise.",
      "properties": {
        "icon": "activity"
      },
      "fields": [
        {
          "name": "relatedCatalogues.sectors",
          "type": "autoComplete-catalogues",
          "label": "Secteurs d'activité",
          "properties": {
            "multiple": true,
            "filters": "{ \"type\": [ \"tag-sector\" ], \"limit\": 100 }"
          }
        },
        {
          "name": "relatedCatalogues.services",
          "type": "autoComplete-catalogues",
          "label": "Services",
          "properties": {
            "multiple": true,
            "filters": "{ \"type\": [ \"tag-service\" ], \"limit\": 100 }"
          }
        }
      ]
    },
    {
      "id": "section_3",
      "label": "Localisation",
      "description": "On vous situe sur la carte ! Ces données sont utilisées pour les visualisations et les filtres territoriaux.",
      "display": "grid",
      "properties": {
        "icon": "location"
      },
      "fields": [
        {
          "name": "indicators.headquarters[0]",
          "type": "textField",
          "label": "Ville du siège"
        },
        {
          "name": "indicators.country[0]",
          "type": "textField",
          "label": "Pays du siège"
        }
      ]
    }
  ]
}